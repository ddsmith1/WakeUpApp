<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pattern_memory_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wakeup.wakeupapp.PatternMemoryGame">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton8"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageButton11" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton8" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_below="@+id/imageButton6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_below="@+id/imageButton9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_alignStart="@+id/imageButton8" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bluesquare"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/checkButton"
        android:text="Check Answer"
        android:layout_width="120dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageButton11" />

    <Button
        android:id="@+id/advanceButton"
        android:text="Advance"
        android:layout_width="120dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton11" />

</RelativeLayout>

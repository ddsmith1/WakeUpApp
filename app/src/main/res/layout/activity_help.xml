<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wakeup.wakeupapp.Help">

    <TableLayout
        android:layout_width="wrap_content"
        android:stretchColumns="1"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:showDividers="beginning|middle">

        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp">
            <LinearLayout android:orientation="horizontal" android:layout_marginLeft="20dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/sampleGame3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/categories_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Categories"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_gravity="left" android:layout_marginLeft="40dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/colorGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/textDark" />

                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Color"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp">
            <LinearLayout android:orientation="horizontal" android:layout_marginLeft="20dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/distractionGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/distract_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Distract"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_gravity="left" android:layout_marginLeft="40dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/matchingGame"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/matching_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:backgroundTint="@color/textDark" />

                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Match"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp">
            <LinearLayout android:orientation="horizontal" android:layout_marginLeft="20dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/mathGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/math_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/textDark" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Math"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_gravity="left" android:layout_marginLeft="40dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/memoryGame"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/memory_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:backgroundTint="@color/textDark" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Memory"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp">
            <LinearLayout android:orientation="horizontal" android:layout_marginLeft="20dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/sampleGame2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/operators_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp" />

                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Operators"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_gravity="left" android:layout_marginLeft="40dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/patternGame"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pattern_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:backgroundTint="@color/textDark" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Pattern"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp">
            <LinearLayout android:orientation="horizontal" android:layout_marginLeft="20dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/reactionGame"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/react_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Reaction"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_gravity="left" android:layout_marginLeft="40dp" android:onClick="displayHelpInfo">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/patternMemoryGame"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_pattern_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Recreate"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>

        <TableRow android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal"
                android:onClick="displayHelpInfo"
                android:layout_marginLeft="37dp">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/reflex_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reflex_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Reflex"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:onClick="displayHelpInfo"
                android:layout_marginLeft="55dp"
                android:layout_gravity="left">
                <ImageButton
                    android:onClick="displayHelpInfo"
                    android:id="@+id/sortingGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sort_icon"
                    android:minHeight="45dp"
                    android:minWidth="45dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/textDark" />
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Sort"
                    android:textSize="12sp"
                    android:textColor="@color/textDark"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>
